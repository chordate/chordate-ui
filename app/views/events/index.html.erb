<div>
  <div id='events'></div>
</div>
<div>
  <div id='filters'>
    <div>
      <div id='filter_klass'></div>
    </div>
    <div>
      <div id='filter_model_type'></div>
    </div>
  </div>
</div>

<script type='text/javascript'>
  c.data.application = new Backbone.Model(<%= raw(ApplicationDecorator.new(application).to_json) %>);

  $(function() {
    var indexView, events;

    (indexView = new c.v.EventsIndexView({el: '#events'})).render();

    events = indexView.collection;
    (new c.v.EventsFilterKlassView({el: "#filter_klass", eventsCollection: events})).render();
    (new c.v.EventsFilterModelTypeView({el: "#filter_model_type", eventsCollection: events})).render();
  });
</script>
